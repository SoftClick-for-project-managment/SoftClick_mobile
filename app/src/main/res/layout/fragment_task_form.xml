<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.tasks.TaskForm">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/subheader"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:paddingVertical="20dp">
            <ImageView
                android:id="@+id/backArrow"
                android:layout_width="35dp"
                android:layout_height="25dp"
                android:layout_marginHorizontal="30dp"
                app:srcCompat="@drawable/back_arrow"/>
            <TextView
                android:id="@+id/subheaderTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/backArrow"
                android:text="Task Creation"
                android:textSize="18sp"
                android:fontFamily="@font/roboto_medium"/>
            <View android:layout_width="match_parent"
                android:layout_height="1dip"
                android:background="@color/gray"
                android:layout_alignParentBottom="true" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:divider="?android:dividerHorizontal"
            android:showDividers="middle"
            >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/taskname"
                    android:layout_toRightOf="@+id/taskname_icon"
                    android:background="@color/transparent"
                    android:fontFamily="@font/roboto_regular"
                    android:hint="Task name"
                    android:inputType="textPersonName"
                    android:maxLines="1"
                    android:paddingLeft="17dp"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:textCursorDrawable="@drawable/cursor_color"
                    android:textSize="16sp"/>

                <ImageView
                    android:id="@+id/taskname_icon"
                    android:layout_width="26dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="17dp"
                    android:src="@drawable/nameoftask" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp">

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/statustask"
                    android:layout_toRightOf="@+id/taskstatus_icon"
                    android:background="@color/transparent"
                    android:fontFamily="@font/roboto_regular"
                    android:paddingLeft="17dp"
                    />

                <ImageView
                    android:id="@+id/taskstatus_icon"
                    android:layout_width="26dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="17dp"
                    android:src="@drawable/statusoftask"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp">

                <EditText
                    android:id="@+id/startdate"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/startdate_icon"
                    android:background="@color/transparent"
                    android:fontFamily="@font/roboto_regular"
                    android:hint="Date"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:maxLines="1"
                    android:paddingLeft="17dp"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"
                    android:textCursorDrawable="@drawable/cursor_color"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/timeStart"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/startdate"
                    android:background="@color/transparent"
                    android:fontFamily="@font/roboto_regular"
                    android:hint="time"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:maxLines="1"
                    android:paddingLeft="17dp"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"
                    android:textCursorDrawable="@drawable/cursor_color"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/startdate_icon"
                    android:layout_width="26dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="17dp"
                    android:src="@drawable/calendar"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp">
                <EditText
                    android:id="@+id/Enddate"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/Enddate_icon"
                    android:background="@color/transparent"
                    android:fontFamily="@font/roboto_regular"
                    android:hint="Date"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:maxLines="1"
                    android:paddingLeft="17dp"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"
                    android:textCursorDrawable="@drawable/cursor_color"
                    android:textSize="16sp" />


                <EditText
                    android:id="@+id/timeEnd"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/Enddate"
                    android:background="@color/transparent"
                    android:fontFamily="@font/roboto_regular"
                    android:hint="time"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:maxLines="1"
                    android:paddingLeft="17dp"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"
                    android:textCursorDrawable="@drawable/cursor_color"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/Enddate_icon"
                    android:layout_width="26dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="17dp"
                    android:src="@drawable/calendar"/>



            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/taskdescription"
                    android:layout_toRightOf="@+id/taskdescription_icon"
                    android:background="@color/transparent"
                    android:fontFamily="@font/roboto_regular"
                    android:hint="Description"
                    android:inputType="textLongMessage"
                    android:maxLines="3"
                    android:paddingLeft="17dp"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:textCursorDrawable="@drawable/cursor_color"
                    android:textSize="16sp"/>

                <ImageView
                    android:id="@+id/taskdescription_icon"
                    android:layout_width="26dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="17dp"
                    android:src="@drawable/write" />

            </RelativeLayout>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/createtaskBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_bg"
                android:fontFamily="@font/roboto_regular"
                android:gravity="center"
                android:clickable="true"
                android:onClick="createTask"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:layout_marginBottom="100dp"
                android:text="Create"
                android:textColor="@color/white"
                android:textSize="18sp" />
        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>