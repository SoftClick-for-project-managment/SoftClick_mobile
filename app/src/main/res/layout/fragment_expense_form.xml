<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.expense.ExpenseFormFragment">

    <ProgressBar
        android:id="@+id/progressBar"
        android:visibility="gone"
        android:indeterminateDrawable="@drawable/ind_progress_bar"
        android:indeterminateDuration="500"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        tools:progress="@integer/material_motion_duration_medium_1"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/subheader"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:paddingVertical="20dp">
            <ImageView
                android:id="@+id/backArrow"
                android:layout_width="35dp"
                android:layout_height="25dp"
                android:layout_marginHorizontal="30dp"
                app:srcCompat="@drawable/back_arrow"/>
            <TextView
                android:id="@+id/subheaderTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/backArrow"
                android:text="Expense Creation"
                android:textSize="18sp"
                android:fontFamily="@font/roboto_medium"/>
            <View android:layout_width="match_parent"
                android:layout_height="1dip"
                android:background="@color/gray"
                android:layout_alignParentBottom="true" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/formBody"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/controls"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:divider="?android:dividerHorizontal"
                android:showDividers="middle"
                >

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp">
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/amount"
                        android:background="@color/transparent"
                        android:fontFamily="@font/roboto_regular"
                        android:hint="amount"
                        android:inputType="textPersonName"
                        android:maxLines="1"
                        android:paddingLeft="17dp"
                        android:paddingTop="15dp"
                        android:paddingBottom="15dp"
                        android:textCursorDrawable="@drawable/cursor_color"
                        android:textSize="16sp"/>

                    <ImageView
                        android:layout_width="26dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="17dp"
                         />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp">

                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/task"
                        android:layout_toRightOf="@+id/task_icon"
                        android:background="@color/transparent"
                        android:fontFamily="@font/roboto_regular"
                        android:paddingLeft="17dp"
                        />

                    <ImageView
                        android:id="@+id/task_icon"
                        android:layout_width="26dp"
                        android:layout_height="30dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="17dp"
                        android:src="@drawable/statusoftask"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp">

                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/category"
                        android:layout_toRightOf="@+id/taskstatus_icon"
                        android:background="@color/transparent"
                        android:fontFamily="@font/roboto_regular"
                        android:paddingLeft="17dp"
                        />

                    <ImageView
                        android:id="@+id/taskstatus_icon"
                        android:layout_width="26dp"
                        android:layout_height="30dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="17dp"
                        android:src="@drawable/statusoftask"/>

                </RelativeLayout>
                <RadioGroup
                    android:gravity="center"
                    android:id="@+id/typeRadioGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <RadioButton
                        android:id="@+id/expenseRadio"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="Expense"/>
                    <RadioButton
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="Income"
                        android:id="@+id/incomeRadio"/>
                </RadioGroup>



            </LinearLayout>
            <RelativeLayout
                android:layout_below="@id/controls"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="20dp">

                <TextView
                    android:id="@+id/createExpenseBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_bg"
                    android:clickable="true"
                    android:fontFamily="@font/roboto_regular"
                    android:gravity="center"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:text="Create"
                    android:textColor="@color/white"
                    android:textSize="18sp" />
            </RelativeLayout>
        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>