<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.team.DetailsFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <ProgressBar
        android:id="@+id/progressBar"
        android:visibility="gone"
        android:indeterminateDrawable="@drawable/ind_progress_bar"
        android:indeterminateDuration="500"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        tools:progress="@integer/material_motion_duration_medium_1"
        />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginBottom="@dimen/_20sdp">
    <ImageView
        android:id="@+id/back"
        android:layout_width="48dp"
        android:layout_height="34dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="6dp"
        android:layout_marginLeft="@dimen/_16sdp"
        app:srcCompat="@drawable/back_arrow" />
        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="90dp"
            android:layout_marginTop="10dp"
            android:text="DETAILS"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"></TextView>

    <ImageView
        android:id="@+id/moreOptions"
        android:layout_width="29dp"
        android:layout_height="34dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="@dimen/_100sdp"
        android:src="@drawable/more" />
</LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Team name"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:textStyle="bold"
            android:layout_marginStart="24dp"
            >
        </TextView>


        <TextView
            android:layout_height="wrap_content"
            android:id="@+id/teamname"
            android:layout_width="363dp"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="@dimen/_20sdp"
            android:padding="@dimen/_10sdp"
            >
        </TextView>

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:text="Description"
            android:layout_marginBottom="@dimen/_10sdp"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:id="@+id/description"
            android:layout_width="363dp"
            android:layout_height="100dp"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="@dimen/_20sdp"
            android:padding="10dp"
            android:text="c'est une équipe de développement resposable sur la création d'une application mobile appelée softclick pour gérer les projets.Elle est composée de 7 membres."

            />
        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="Members"
            android:textSize="20dp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:textColor="@color/black"
            android:textStyle="bold"
            />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/memberRcyclerview"
            android:layout_width="390dp"
            android:layout_height="281dp"
            android:layout_marginStart="20dp"
            tools:listitem="@layout/member_item" />

    </LinearLayout>






















</FrameLayout>