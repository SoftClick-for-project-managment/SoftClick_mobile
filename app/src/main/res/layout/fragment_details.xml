<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.team.DetailsFragment">
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/_8sdp">
    <ProgressBar
        android:id="@+id/progressBar"
        android:visibility="gone"
        android:indeterminateDrawable="@drawable/ind_progress_bar"
        android:indeterminateDuration="500"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        tools:progress="@integer/material_motion_duration_medium_1"

        />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal">

            <ImageView
                android:id="@+id/back"
                android:layout_width="48dp"
                android:layout_height="34dp"
                android:layout_marginLeft="@dimen/_16sdp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="6dp"
                android:textColor="@color/purple_200"
                app:srcCompat="@drawable/back_arrow" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:text="DETAILS"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

            </TextView>

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginTop="10dp"
                android:src="@drawable/detail">

            </androidx.appcompat.widget.AppCompatImageView>

            <ImageView
                android:id="@+id/moreOptions"
                android:layout_width="29dp"
                android:layout_height="34dp"
                android:layout_marginLeft="@dimen/_130sdp"
                android:layout_marginTop="10dp"
                android:src="@drawable/more" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="4dip"
            android:background="@color/gray"
         />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Team name"
            android:textColor="#555B61"
            android:layout_marginTop="@dimen/_15sdp"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginBottom="@dimen/_4sdp"
            android:layout_marginStart="24dp"
            >
        </TextView>


        <TextView
            android:layout_height="wrap_content"
            android:id="@+id/teamname"
            android:layout_width="363dp"
            android:layout_marginStart="24dp"
            android:layout_marginBottom="@dimen/_20sdp"
            android:textSize="@dimen/_15ssp"
            android:textColor="@color/secondary"
            >
        </TextView>

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:text="Description"
            android:textStyle="bold"
            android:layout_marginBottom="@dimen/_4sdp"
            android:textColor="#555B61"
            android:textSize="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:id="@+id/description"
            android:layout_width="363dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginBottom="@dimen/_20sdp"
            android:textSize="@dimen/_15ssp"
            android:textColor="@color/secondary"


            />
        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:text="Members"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginBottom="@dimen/_5sdp"
            android:textColor="#555B61"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/memberRcyclerview"
            android:layout_width="match_parent"
            android:layout_height="278dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="@dimen/_5sdp"
            tools:listitem="@layout/member_item" />

    </LinearLayout>


</FrameLayout>