<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.layout.MenuActivity"
    >

    <ProgressBar
        android:id="@+id/progressBar"
        android:visibility="gone"
        android:indeterminateDrawable="@drawable/ind_progress_bar"
        android:indeterminateDuration="500"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        tools:progress="@integer/material_motion_duration_medium_1"
        />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scrollbars="vertical"
        android:fillViewport="true"
        android:isScrollContainer="false">

        <RelativeLayout
            android:id="@+id/formBody"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        >

                        <ImageView
                            android:id="@+id/back"
                            android:layout_width="73dp"
                            android:layout_height="32dp"

                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="6dp"
                            app:srcCompat="@drawable/back_arrow" />
                        <TextView
                            android:id="@+id/pageTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="65dp"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/roboto_medium"
                            android:text="Employee Creation"
                            android:textAppearance="@style/TextAppearance.AppCompat.Large"
                            android:textSize="18sp" />

                    </RelativeLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@android:color/darker_gray"
                        android:layout_marginTop="50dp"/>


                    <androidx.cardview.widget.CardView
                        android:id="@+id/roundCardView"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin="65dp"
                        android:layout_centerHorizontal="true"
                        android:elevation="0dp"
                        app:cardCornerRadius="60dp">

                        <ImageView
                            android:id="@id/employeePhoto"
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:src="@drawable/user_photo" />
                    </androidx.cardview.widget.CardView>


                </FrameLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#e0dcdc"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:divider="?android:dividerHorizontal"
                    android:showDividers="middle"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp">
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/firstName"
                            android:layout_toRightOf="@+id/firstName_icon"
                            android:background="@color/transparent"
                            android:fontFamily="@font/roboto_regular"
                            android:hint="First Name"
                            android:inputType="textPersonName"
                            android:maxLines="1"
                            android:paddingLeft="17dp"
                            android:paddingTop="15dp"
                            android:paddingBottom="15dp"
                            android:textCursorDrawable="@drawable/cursor_color"
                            android:textSize="16sp"/>

                        <ImageView
                            android:id="@+id/firstName_icon"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="17dp"
                            android:src="@drawable/user"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/lastName"
                            android:layout_toRightOf="@+id/lastName_icon"
                            android:background="@color/transparent"
                            android:fontFamily="@font/roboto_regular"
                            android:hint="Last Name"
                            android:inputType="textPersonName"
                            android:maxLines="1"
                            android:paddingLeft="17dp"
                            android:paddingTop="15dp"
                            android:paddingBottom="15dp"
                            android:textCursorDrawable="@drawable/cursor_color"
                            android:textSize="16sp"/>

                        <ImageView
                            android:id="@+id/lastName_icon"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="17dp"
                            android:src="@drawable/user"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/employeeEmail"
                            android:layout_toRightOf="@+id/employeeEmail_icon"
                            android:background="@color/transparent"
                            android:fontFamily="@font/roboto_regular"
                            android:hint="Email"
                            android:inputType="textPersonName"
                            android:maxLines="1"
                            android:paddingLeft="17dp"
                            android:paddingTop="15dp"
                            android:paddingBottom="15dp"
                            android:textCursorDrawable="@drawable/cursor_color"
                            android:textSize="16sp"/>

                        <ImageView
                            android:id="@+id/employeeEmail_icon"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="17dp"
                            android:src="@drawable/mail"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/employeePhone"
                            android:layout_toRightOf="@+id/employeePhone_icon"
                            android:background="@color/transparent"
                            android:fontFamily="@font/roboto_regular"
                            android:hint="Phone"
                            android:maxLines="1"
                            android:paddingLeft="17dp"
                            android:paddingTop="15dp"
                            android:paddingBottom="15dp"
                            android:textCursorDrawable="@drawable/cursor_color"
                            android:textSize="16sp"
                            android:inputType="phone"/>

                        <ImageView
                            android:id="@+id/employeePhone_icon"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="17dp"
                            android:src="@drawable/phone"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/employeeFunction"
                            android:layout_toRightOf="@+id/employeeFunction_icon"
                            android:background="@color/transparent"
                            android:fontFamily="@font/roboto_regular"
                            android:hint="Function"
                            android:inputType="textPersonName"
                            android:maxLines="1"
                            android:paddingLeft="17dp"
                            android:paddingTop="15dp"
                            android:paddingBottom="15dp"
                            android:textCursorDrawable="@drawable/cursor_color"
                            android:textSize="16sp"/>

                        <ImageView
                            android:id="@+id/employeeFunction_icon"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="17dp"
                            android:src="@drawable/function"/>

                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        >

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/employeeSkills"
                                android:layout_toRightOf="@+id/employeeSkills_icon"
                                android:background="@color/transparent"
                                android:fontFamily="@font/roboto_regular"
                                android:hint="Skills"
                                android:inputType="textPersonName"
                                android:maxLines="1"
                                android:paddingLeft="17dp"
                                android:paddingTop="15dp"
                                android:paddingBottom="15dp"
                                android:textCursorDrawable="@drawable/cursor_color"
                                android:textSize="16sp"/>

                            <ImageView
                                android:id="@+id/employeeSkills_icon"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="17dp"
                                android:src="@drawable/skills"/>

                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="10dp"
                            android:gravity="center_horizontal"
                            >

                            <TextView
                                android:id="@+id/selectEmployeeSkillsBtn"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@color/gray"
                                android:clickable="true"
                                android:fontFamily="@font/roboto_regular"
                                android:paddingLeft="20dp"
                                android:paddingTop="10dp"
                                android:paddingRight="20dp"
                                android:paddingBottom="10dp"
                                android:text="Select Skills"
                                android:textColor="@color/black"
                                android:textSize="18sp" />

                        </LinearLayout>





                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#e0dcdc"/>

                <TextView
                    android:id="@+id/createEmployeeBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_bg"
                    android:fontFamily="@font/roboto_regular"
                    android:gravity="center"
                    android:clickable="true"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="20dp"
                    android:text="Create"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:layout_marginBottom="20dp"/>

            </LinearLayout>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>
